RewriteEngine On

# Якщо запит не файл і не директорія - перенаправляємо на index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L,QSA]

# Включаємо обробку помилок
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php

# Вказуємо кодування UTF-8 для різних типів файлів
AddDefaultCharset UTF-8
<FilesMatch "\.(html|htm|php|css|js)$">
    AddDefaultCharset UTF-8
</FilesMatch>

# Включити кешування статичних файлів
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Заборонити доступ до деяких типів файлів
<FilesMatch "(\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|swp)|~)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>